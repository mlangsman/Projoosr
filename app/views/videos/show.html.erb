<p id="notice"><%= notice %></p>

<h2><%= @video.title %></h2>
by <strong><%= @video.user.email %></strong>

<p><%= @video.description %></p>

<!--<%= render 'debug' %>-->

<div class="player" style="display:block;width:<%= @h264_encoding.width %>px;height:<%= @h264_encoding.height %>px;background-image:url(<%= @video.thumbnail %>)" 
	href="<%= @h264_encoding.url %>"

	<!-- play button -->
	<img src="/images/play_large.png" alt="Play this video" />
	
</div>

<script language="JavaScript">
	flowplayer("div.player", "/flowplayer-3.2.7.swf");
</script>



<%= link_to 'Edit', edit_video_path(@video) %> |
